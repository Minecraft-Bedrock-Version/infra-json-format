{
  "src": "iam_role node_id",
  "dst": "lambda_service node_id",
  "directed": true,
  "conditions": [
    {
      "iam_role": {
        "attributes": {
          "assume_role_policy": [
            {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["sts:AssumeRole"],
                  "Principal": { "Service": "lambda.amazonaws.com" }
                }
              ]
            }
          ]
        }
      }
    }
  ]
}
